		<logger level="INFO" doc:name="Logger" doc:id="34141b06-f5a8-409e-99be-1b0dd2fb2b4a" message="#[payload]"/>
    </flow>
    <flow name="get:\users:users_api-config">
        <wsc:consume operation="GetAllUsers" doc:name="Consume" doc:id="d64543ea-3a50-4d9a-a404-3e4aacbef278" config-ref="Web_Service_Consumer_Config">
